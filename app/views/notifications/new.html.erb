<% @page_title = "Create Notification" %>
<div class="center page-header">
	<h2>Create Notification</h2>
</div>
<%= form_for(@notification, :url=> notifications_path, :method => 'post', :html => {:class => 'form-horizontal', :role => 'form'} ) do |f| %>
<%= hidden_field_tag :floor_id, @floor_id %>
<div class="form-group">
  <%= f.label :title, class: 'col-sm-2 control-label' %>
  <div class="col-sm-8">
    <%= f.text_field :title, class: 'form-control', placeholder: 'Enter title', autofocus: true %>
  </div>
</div>
<div class="form-group">
  <%= f.label :message, class: 'col-sm-2 control-label' %>
  <div class="col-sm-8">
    <%= f.text_area :message,  rows: '7', class: 'form-control', placeholder: 'Enter message', autofocus: true %>
  </div>
</div>
<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit "Create Notification", class: 'btn btn-primary btn-lg' %>
	</div>
</div>
<% end %>
