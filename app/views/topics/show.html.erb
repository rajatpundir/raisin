<% @page_title = "Local Forum" %>
<div class="center page-header">
  <h3><%= simple_format(@topic.message) %></h3>
</div>
<div class="col-xs-8 col-xs-offset-2">
<%= form_for(@post, :url=>  topics_add_post_path(@topic), :method => 'post', :html => {:class => 'form-horizontal', :role => 'form'} ) do |f| %>
<%= hidden_field_tag :topic_id, @topic.id %>
<div class="form-group">
  <%= f.submit "Post", class: 'btn btn-lg btn-primary' %>
  <div class="col-sm-8">
    <%= f.text_area :message,  rows: '1', class: 'form-control', placeholder: 'Say something helpful...', autofocus: true %>
  </div>
</div>
<% end %>
</div>
<div class="col-xs-8 col-xs-offset-2">
  <% @posts.each do |post| %>
  <div class="entry">
    <%= simple_format(post.message) %>
    <p class="meta">
    <span class="date">
      <%= time_ago_in_words(post.created_at) %> ago
    </span>
      Posted by <%= post.origin %>
    </p>
  </div>
  <% end %>
</div>
