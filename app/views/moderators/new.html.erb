<% @page_title = "Create Moderator" %>
<div class="center page-header">
	<h2>Create Moderator</h2>
</div>
<%= form_for(@moderator, :url=> moderators_path, :method => 'post', :html => {:class => 'form-horizontal', :role => 'form'} ) do |f| %>
<div class="form-group">
  <%= f.label :username, class: 'col-sm-2 control-label' %>
  <div class="col-sm-8">
    <%= f.text_field :username,  rows: '10', class: 'form-control', placeholder: 'Enter username', autofocus: true %>
  </div>
</div>
<div class="form-group">
  <%= f.label :first_name, class: 'col-sm-2 control-label' %>
  <div class="col-sm-8">
    <%= f.text_field :first_name,  rows: '10', class: 'form-control', placeholder: 'Enter your first name', autofocus: true %>
  </div>
</div>
<div class="form-group">
  <%= f.label :last_name, class: 'col-sm-2 control-label' %>
  <div class="col-sm-8">
    <%= f.text_field :last_name,  rows: '10', class: 'form-control', placeholder: 'Enter your last name', autofocus: true %>
  </div>
</div>
<div class="form-group">
  <%= f.label :password, class: 'col-sm-2 control-label' %>
  <div class="col-sm-8">
    <%= f.text_field :password,  rows: '10', class: 'form-control', placeholder: 'Enter password', autofocus: true %>
  </div>
</div>
<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit "Create Moderator", class: 'btn btn-primary btn-lg' %>
	</div>
</div>
<% end %>
