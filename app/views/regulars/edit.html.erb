<% @page_title = "Edit Regular"%>
<div class="center page-header">
	<h2>Edit Regular</h2>
</div>
<%= form_for(@regular,:url=> regular_path(@regular),:method => 'patch', :html => {:class => 'form-horizontal', :role => 'form'}) do |f| %>
<div class="form-group">
	<%= f.label :first_name, class: 'col-sm-2 control-label' %>
	<div class="col-sm-8">
		<%= f.text_field :first_name,  rows: '10', class: 'form-control', placeholder: 'Enter first name', autofocus: true %>
	</div>
</div>
<div class="form-group">
	<%= f.label :last_name, class: 'col-sm-2 control-label' %>
	<div class="col-sm-8">
		<%= f.text_field :last_name,  rows: '10', class: 'form-control', placeholder: 'Enter last name', autofocus: true %>
	</div>
</div>
<div class="form-group">
	<%= f.label :password, class: 'col-sm-2 control-label' %>
	<div class="col-sm-8">
		<%= f.text_field :password,  rows: '10', class: 'form-control', placeholder: 'Enter password', autofocus: true %>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit "OK",class: 'btn btn-primary btn-lg' %>
	</div>
</div>
<% end %>

