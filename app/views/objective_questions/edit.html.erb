<% @page_title = "Edit Question"%>
<div class="center page-header">
	<h2>Edit Question</h2>
</div>
<%= form_for(@objective_question,:url=> objective_question_path(@objective_question),:method => 'patch', :html => {:class => 'form-horizontal', :role => 'form'}) do |f| %>
<%= hidden_field_tag :objective_test_id, @objective_test_id %>
<div class="form-group">
	<%= f.label :message, class: 'col-sm-2 control-label' %>
	<div class="col-sm-8">
		<%= f.text_area :message,  rows: '10', class: 'form-control', placeholder: 'Enter message', autofocus: true %>
	</div>
</div>
<div class="form-group">
	<%= f.label :answer, class: 'col-sm-2 control-label' %>
	<div class="col-sm-8">
		<%= f.text_area :answer,  rows: '10', class: 'form-control', placeholder: 'Enter message', autofocus: true %>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit "Update",class: 'btn btn-primary btn-lg' %>
	</div>
</div>
<% end %>
<div class="col-xs-8 col-xs-offset-2 well well-lg">
  <table class="table table-bordered table-striped table-hover table-condensed">
    <tr>
      <td>
        <%= form_for(@wrong_answer, :url=>  objective_questions_add_wrong_answer_path(@objective_question), :method => 'post', :html => {:class => 'form-horizontal', :role => 'form'} ) do |f| %>
			<%= hidden_field_tag :objective_question_id, @objective_question.id %>
			<div class="form-group">
			  <%= f.submit "Add Wrong answer", class: 'btn btn-danger' %>
			  <div class="col-sm-8">
			    <%= f.text_area :message,  rows: '1', class: 'form-control', placeholder: 'Add wrong_answer...', autofocus: true %>
			  </div>
			</div>
		<% end %>
      </td>
    </tr>
    <% @objective_question.wrong_answers.each do |wrong_answer| %>
    <tr>
      <td>
        <%= simple_format(wrong_answer.message) %>
      </td>
      <td> <%= link_to("Delete", objective_questions_delete_wrong_answer_path(wrong_answer), :class => 'btn btn-info') %> </td>
    </tr>
    <% end %>
  </table>
</div>

