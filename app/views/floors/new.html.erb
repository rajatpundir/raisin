<% @page_title = "Create Floor" %>
<div class="center page-header">
	<h2>Create Floor</h2>
</div>
<%= form_for(@floor, :url=> floors_path, :method => 'post', :html => {:class => 'form-horizontal', :role => 'form'} ) do |f| %>
<div class="form-group">
	<%= f.label :floorname, class: 'col-sm-2 control-label' %>
	<div class="col-sm-8">
		<%= f.text_field :floorname,  rows: '10', class: 'form-control', placeholder: 'Your floorname', autofocus: true %>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit "Create Floor", class: 'btn btn-primary btn-lg' %>
	</div>
</div>
<% end %>
</div>
