<% @page_title = "Tags" %>
<div class="center page-header">
  <h2>Tags for <%= @floor.floorname %></h2>
  <%= form_for(@floor, :url=> new_tag_path, :method => 'get' ) do |f| %>
  <%= hidden_field_tag :floor_id, @floor.id %>
  <%= f.submit "Add new Tag", class: 'btn btn-primary' %>
  <% end %>
</div>
<div class="col-xs-7 col-xs-offset-2">
  <% @tags.each do |tag| %>
  <div class="entry">
   <%= link_to(tag.title, tag_path(tag)) %>
   <p class="meta">
    <table>
      <tr>
        <td>
          <%= form_for(@floor, :url=> edit_tag_path(tag), :method => 'get' ) do |f| %>
          <%= hidden_field_tag :floor_id, @floor.id %>
          <%= f.submit "Edit", class: 'btn btn-info' %>
          <% end %>
        </td>
        <td>&nbsp;</td>
        <td>
          <%= form_for(@floor, :url=> delete_tag_path(tag), :method => 'get' ) do |f| %>
          <%= hidden_field_tag :floor_id, @floor.id %>
          <%= f.submit "Delete", class: 'btn btn-danger' %>
          <% end %>
        </td>
        <td>&nbsp;&nbsp;&nbsp;</td>
        <td>
          <span>
            Added by <%= tag.origin %>
          </span>
        </td>
        <td>&nbsp;</td>
        <td>
          <span class="date">
           <%= time_ago_in_words(tag.created_at) %> ago
         </span>
       </td>
     </tr>
   </table>
 </p>
</div>
<% end %>
</div>
