<% @page_title = "Create Tower" %>
<div class="center page-header">
	<h2>Create Tower</h2>
</div>
<%= form_for(@tower, :url=> towers_path, :method => 'post', :html => {:class => 'form-horizontal', :role => 'form'} ) do |f| %>
<div class="form-group">
	<%= f.label :towername, class: 'col-sm-2 control-label' %>
	<div class="col-sm-8">
		<%= f.text_field :towername,  rows: '10', class: 'form-control', placeholder: 'Your towername', autofocus: true %>
	</div>
</div>
<div class="form-group">
	<%= f.label :password, class: 'col-sm-2 control-label' %>
	<div class="col-sm-8">
		<%= f.text_field :password,  rows: '10', class: 'form-control', placeholder: 'Your password', autofocus: true %>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit "Create Tower", class: 'btn btn-primary btn-lg' %>
	</div>
</div>
<% end %>
</div>
