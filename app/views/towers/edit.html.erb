<% @page_title = "Change Tower Password"%>
<div class="center page-header">
  <h2>Change Tower Password</h2>
</div>
	<%= form_for(@tower,:url=> tower_path(@tower),:method => 'patch', :html => {:class => 'form-horizontal', :role => 'form'}) do |f| %>
    <div class="form-group">
	<%= f.label :password, class: 'col-sm-2 control-label' %>
	<div class="col-sm-8">
		<%= f.text_field :password,  rows: '10', class: 'form-control', placeholder: 'Enter new password', autofocus: true %>
	</div>
	</div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "OK",class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
	<% end %>

